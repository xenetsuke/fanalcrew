# Build stage
FROM maven:3.8.5-openjdk-17 AS build

# Set the working directory inside the container
WORKDIR /app

# Copy the pom.xml and the source code into the container
COPY . .

# Run Maven build to create the JAR file without running tests
RUN mvn clean package -DskipTests

# Runtime stage
FROM openjdk:17.0.1-jdk-slim

# Copy the JAR file from the build stage into the runtime image
COPY --from=build /app/target/Blue-Collar-0.0.1-SNAPSHOT.jar /Blue-Collar.jar

# Expose the port your application will run on
EXPOSE 8080

# Run the application when the container starts
ENTRYPOINT ["java", "-jar", "/Blue-Collar.jar"]
