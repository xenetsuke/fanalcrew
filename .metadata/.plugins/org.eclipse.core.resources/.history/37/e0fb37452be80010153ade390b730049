# Stage 1: Build the application
FROM maven:3.8.5-openjdk-17 AS build

# Set the working directory inside the container

# Copy the entire project to the container
COPY . .

# Run Maven build to package the JAR (skip tests for faster builds)
RUN mvn clean package -DskipTests

# Stage 2: Create the runtime image
FROM openjdk:17.0.1-jdk-slim

# Copy the JAR file from the build stage into the new image
COPY --from=build /app/target/Blue-Collar-0.0.1-SNAPSHOT.jar Blue-Collar.jar

# Expose the port the app will run on
EXPOSE 8080

# Start the Spring Boot application
ENTRYPOINT ["java", "-jar", "Blue-Collar.jar"]
